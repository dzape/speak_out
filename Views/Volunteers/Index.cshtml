@model IEnumerable<speak_out.Models.Volunteers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VolunteerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VolunteerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VolunteerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
